<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs>-Xmx100G</exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.appArgs>-src dcm4 -dest rdf2 -t 16 -extra -naming SHA256 -oid -c -status</exec.appArgs>
                <exec.mainClass>com.ebremer.dcm2rdf.dcm2rdf</exec.mainClass>
                <exec.executable>java</exec.executable>
                <exec.workingdir>d:/dicom</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs>-Xmx100G -agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.appArgs>-src dcm4 -dest rdf2 -t 16 -extra -naming SHA256 -oid -c -status</exec.appArgs>
                <exec.mainClass>com.ebremer.dcm2rdf.dcm2rdf</exec.mainClass>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir>d:/dicom</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:3.1.0:exec</goal>
            </goals>
            <properties>
                <exec.vmArgs>-Xmx100G</exec.vmArgs>
                <exec.args>${exec.vmArgs} -classpath %classpath ${exec.mainClass} ${exec.appArgs}</exec.args>
                <exec.mainClass>com.ebremer.dcm2rdf.dcm2rdf</exec.mainClass>
                <exec.executable>java</exec.executable>
                <exec.appArgs>-src dcm4 -dest rdf2 -t 16 -extra -naming SHA256 -oid -c -status</exec.appArgs>
                <exec.workingdir>d:/dicom</exec.workingdir>
            </properties>
        </action>
    </actions>
